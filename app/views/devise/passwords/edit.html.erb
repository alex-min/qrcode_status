<div class="container">
  <div class="well">
    <h2><%= t('.title') %></h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>

      <div class="form-inputs">
        <%= f.input :password, label: t('.new_password'), required: true, autofocus: true, hint: (t('.minimum_password_length', length: @minimum_password_length) if @minimum_password_length) %>
        <%= f.input :password_confirmation, label: t('.new_password_confirm'), required: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, t('.change_password') %>
      </div>
    <% end %>
  </div>
  <%= render "devise/shared/links" %>
</div>
