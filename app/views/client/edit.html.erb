<div class="action-bar">
  <%= link_to "Retourner a la liste des clients", clients_path %>
  <%= link_to "Voir la fiche SAV pour #{@client[:last_name]} #{@client[:first_name]}", client_path(@client[:unique_id]) %>
</div>
<%= simple_form_for @client, url: client_edit_path(@client.try(:unique_id)) do |c| %>
  <%= c.input :last_name, label: 'Nom' %>
  <%= c.input :first_name, label: 'Prenom' %>
  <%= c.input :address, label: 'Addresse' %>
  <%= c.input :postal_code, label: 'Code Postal' %>
  <%= c.input :phone, label: 'Telephone' %>
  <%= c.input :product, label: 'Produit' do %>
    <%= c.select :product, [
  		['Tour de PC', 'tour_pc'],
  		['Smartphone', 'smartphone'],
  		['PC Portable', 'pc_portable'],
  		['Autre', 'autre']
		] %>
  <% end %>
  <%= c.input :product_state, label: 'Etat du produit' do %>
    <%= c.select :product_state,
  		['excellent', 'bon', 'moyen', 'mauvais'].map {|t| [t.humanize, t]}
		%>
  <% end %>
  <%= c.input :brand, label: 'Marque' %>
  <%= c.input :product_name, label: 'ModÃ¨le' %>
  <%= c.input :panne, label: 'Panne', as: :text %>
  <%= c.button :submit, "Sauvegarder" %>
<% end %>