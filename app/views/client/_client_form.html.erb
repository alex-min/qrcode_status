<%= simple_form_for(client_form, as: 'client', url: request.path) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :last_name, required: true, autofocus: true %>
    <%= f.input :first_name %>
    <%= f.input :email, as: :email, type: :email %>
    <%= f.input :address, as: :text %>
    <%= f.input :postal_code %>
    <%= f.input :city %>
    <%= f.input :phone %>
    <%= f.input :product do %>
      <%= f.select :product, @product_types %>
    <% end %>

    <%= f.input :product_state do %>
      <%= f.select :product_state_id,
      ProductState.where(company: current_user.company).map {|t| [t.name, t.id]}
    %>
    <% end %>
    <%= f.input :brand, required: true %>
    <%= f.input :product_name %>
    <%= f.input :panne, as: :text %>
  </div>

  <br>
  <br>
  <div class="form-actions">
    <% if client_form.id.present? %>
      <%= f.submit_tag t('.edit'), data: { disable_with: t('.edit_pending') }, class: 'btn btn-primary btn-lg' %>
    <% else %>
      <%= f.submit_tag t('.add'), data: { disable_with: t('.add_pending') }, class: 'btn btn-primary btn-lg' %>
    <% end %>
  </div>
<% end %>
